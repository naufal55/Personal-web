<html>
    <head>
        <title>Detail Project</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    </head>
    <body class="bg-opacity-10 bg-dark">
       
        <!-- navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">

                <a class="navbar-brand me-5" href="/">
                    <img src="/public/assets/logo.png" alt="logo">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item me-4">
                            <a class="nav-link ft-normal" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link ft-normal" aria-current="page" href="/add-project">Add Project</a>
                        </li>
                    </ul>
                    
                    <a href="/contact" class="btn btn-dark text-light rounded-3" type="submit">Contact Me</a>
                </div>
            </div>
        </nav>
        <!-- navbar -->
         <!-- content -->
         {{#each blogs}}
         <div class="container shadow">
            <div class="row mt-5 bg-white">
                <h1 class="text-center my-4">{{this.name}}</h1>

                <div class="col-sm-12 col-md-7 mt-4 ms-5 p-0 ">
                    <img class="rounded-3  w-100" src="/public/assets/blog-img-detail.png" style="object-fit: cover;">
                </div>
                
                <div class="col-sm-12 col-md-3 mt-4 ms-5 p-0">
                    <h2>Duration</h2>
                    <div>
                        <p><i class="fa-solid fa-calendar-days"></i> {{tgllengkap this.start_date}} - {{tgllengkap this.end_date}}</p>
                    </div>
                    <div>
                        <p><i class="fa-solid fa-clock"></i> {{durasi this.end_date this.start_date}}</p>
                    </div>
                    <h2>Technologies</h2>
                    <div class="d-flex">
                        <div class="w-50">
                            {{#each this.technologies}}
                                {{#if this}}              
                                    <p><i class="fa-brands fa-{{this}} pe-2"></i>{{this}}</p>
                                {{/if }}
                            {{/each }}
                        </div>
                    </div>
                </div>
                <div class="px-5 col-12 mt-3" style="text-align: justify;">
                    <p>{{description}}</p>
                </div>
            </div>
                
        {{/each }}
        <!-- content -->
    </body>
</html>