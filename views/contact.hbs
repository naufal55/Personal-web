<html>
    <head>
        <title>Contact Me</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="/public/js/form.js"></script>
    </head>
    <body class=" bg-opacity-10 bg-secondary">
        <!-- navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">

                <a class="navbar-brand me-5" href="/">
                    <img src="/public/assets/logo.png" alt="logo">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item me-4">
                            <a class="nav-link ft-normal" aria-current="page" href="/">Home</a>
                        </li>
                        <li class="nav-item me-4">
                            <a class="nav-link ft-normal" aria-current="page" href="/add-project">Add Project</a>
                        </li>
                    </ul>
                    
                    <a href="" class="btn btn-dark text-light fw-bold rounded-3" type="submit">Contact Me</a>
                </div>
            </div>
        </nav>
        <!-- navbar -->

        <!-- content -->
        <div class="container-fluid row align-items-center justify-content-center">
            <div class="container-form col-lg-6 col-sm-12 px-lg-5 px-sm-5">
                <p class="h3 text-center mt-3 mb-2 fw-bold">GET IN TOUCH</p>
    
                <form class="mx-sm-5">
                    <div class="mb-3">
                        <label for="input-name" class="form-label fw-bold">Name</label>
                        <input type="text" id="input-name"class="form-control shadow">
                    </div>
                    <div class="mb-3">
                        <label for="input-email" class="form-label fw-bold">Email</label>
                        <input type="email" name="email" id="input-email" class="form-control shadow">
                    </div>
                    <div class="mb-3">
                        <label for="input-phone" class="form-label fw-bold">Phone Number</label>
                        <input type="number" name="nomor-telp" id="input-phone" class="form-control shadow">
                    </div>
                    <div class="mb-3">
                        <label for="input-subject" class="form-label fw-bold">Subject</label>
                        <select name="subject" id="input-subject" class="form-select" aria-label="Default select example">
                            <option hidden></option>
                            <option value="Let&#39;s Talk">Let's talk</option>
                            <option value="Let&#39;s Collaboration">Let's collaboration</option>
                            <option value="I am Hiring">I am Hiring</option>
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="input-message" class="form-label fw-bold">Your Message</label>
                        <textarea class="form-control shadow" id="input-message" rows="3"></textarea>
                    </div>
                      
                    <div class="mb-3">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button  onclick="submitData()" class="btn btn-dark text-light rounded-pill px-4" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- content -->
    </body>
</html>