<html>
    <head>
        <title>Login</title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
        <script src="/public/js/form.js"></script>

        
    </head>
    <body class=" bg-opacity-10 bg-secondary">
        <!-- navbar -->
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container">

                <a class="navbar-brand me-5" href="/">
                    <img src="/public/assets/logo.png" alt="logo">
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item me-4">
                            <a class="nav-link ft-normal" aria-current="page" href="/">Home</a>
                        </li>
                        {{#if isLogin}}
                        <li class="nav-item me-4">
                            <a class="nav-link ft-normal" aria-current="page" href="/add-project">Add Project</a>
                        </li>
                        {{/if}}
                    </ul>
                    
                    {{#if isLogin}}
                        <a href="#" class="btn btn-light rounded-3 me-3">Hello, {{user.name}}</a>
                        <a href="/logout" class="btn btn-light text-danger rounded-3 me-3">Logout</a>
                    {{else}}
                        <a href="/register" class="btn btn-light rounded-3 me-3">Register</a>
                        <a href="/login" class="btn btn-light rounded-3 me-4 active fw-bold disabled">Login</a>
                    {{/if}}
                    <a href="/contact" class="btn btn-dark text-light rounded-3" type="submit">Contact Me</a>
                </div>
            </div>
        </nav>
        <!-- navbar -->

        <!-- content -->
        <div class="container-fluid row align-items-center justify-content-center h-75">
            <div class="container-form col-lg-6 col-sm-12 px-lg-5 px-sm-5">
                <p class="h3 text-center my-3 fw-bold">LOGIN TO YOUR ACCOUNT</p>

                

                <form action="/login" method="POST" class="mx-sm-5">

                    {{#if messages.danger}}
                    <div class="alert alert-danger" role="alert">
                        {{messages.danger}}
                    </div>
                    {{/if}}
                    
                    <div class="mb-3">
                        <label for="inputProject" class="form-label fw-bold">Email</label>
                        <input type="email" class="form-control shadow" id="inputProject" name="inputan">
                    </div>
                    <div class="mb-3">
                        <label for="inputProject" class="form-label fw-bold">Password</label>
                        <input type="password" class="form-control shadow" id="inputProject" name="inputan">
                    </div>                   
                      
                    <div class="mb-3">
                        <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                            <button class="btn btn-dark text-light rounded-pill px-4" type="submit">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
        <!-- content -->
 
    </body>
</html>